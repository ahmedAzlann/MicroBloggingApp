<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back1">

    <TextView
        android:id="@+id/signintv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:text="Register"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/username"
        android:drawableLeft="@drawable/baseline_person_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/signintv"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:background="#30ffffff"
        android:hint="Username"
        android:padding="20dp"
        android:textSize="25dp"
        android:drawablePadding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />


    <EditText
        android:id="@+id/Email"
        android:drawableLeft="@drawable/baseline_person_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:background="#30ffffff"
        android:hint="Email"
        android:padding="20dp"
        android:drawablePadding="20dp"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/signintv"
        android:layout_marginStart="30dp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:background="#30ffffff"
        android:drawableLeft="@drawable/baseline_lock_24"
        android:drawablePadding="20dp"
        android:hint="Password"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="25dp" />

    <Button
        android:id="@+id/SignUpbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="420dp"
        android:layout_marginRight="140dp"
        android:backgroundTint="@color/white"
        android:padding="15dp"
        android:text="SignUp"
        android:textColor="#4CAF50"
        android:textSize="30dp"></Button>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:text="Or Sign in with"
        android:textColor="#5ABA5E"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="620dp"></TextView>


    <ImageView
        android:src="@drawable/gog1"
        android:layout_width="60dp"
        android:layout_height="120dp"
        android:layout_marginTop="680dp"
        android:layout_marginLeft="100dp"></ImageView>

    <ImageView
        android:src="@drawable/fblogo"
        android:layout_width="60dp"
        android:layout_height="120dp"
        android:layout_marginTop="680dp"
        android:layout_marginLeft="200dp"></ImageView>

    <ImageView
        android:src="@drawable/insta1"
        android:layout_width="60dp"
        android:layout_height="120dp"
        android:layout_marginTop="680dp"
        android:layout_marginLeft="300dp"></ImageView>


</RelativeLayout>

